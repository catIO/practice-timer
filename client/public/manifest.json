{
  "name": "Practice Timer",
  "short_name": "Practice",
  "description": "To keep you practicing",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#333333",
  "orientation": "portrait",
  "scope": "/",
  "lang": "en",
  "categories": ["productivity", "education", "music"],
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-monochrome.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "monochrome"
    }
  ],
  "shortcuts": [
    {
      "name": "Start Work Session",
      "short_name": "Work",
      "description": "Start a new work session",
      "url": "/?mode=work",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Start Break",
      "short_name": "Break",
      "description": "Start a break session",
      "url": "/?mode=break",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "background": {
    "service_worker": "/sw.js",
    "type": "module"
  },
  "permissions": [
    "background-sync",
    "notifications",
    "wake-lock"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}